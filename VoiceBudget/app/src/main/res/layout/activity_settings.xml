<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.uwo.nvanbomm.voicebudget.SettingsActivity"
    android:background="@drawable/grad_background">


    <TextView
        android:text="Settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:textSize="24sp" />

    <TextView
        android:text="Microphone Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="47dp"
        android:id="@+id/textView3"
        android:textSize="18sp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/mic"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/imageButton"
        android:scaleType="fitCenter"
        android:background="@drawable/roundedbuttonselected"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/deltahacks"
        android:layout_alignTop="@+id/imageButton"
        android:layout_centerHorizontal="true"
        android:id="@+id/imageButton2"
        android:scaleType="fitCenter"
        android:padding="2dp"
        android:background="@drawable/roundedbutton"/>

    <TextView
        android:text="Background color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageButton"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="29dp"
        android:id="@+id/textView4"
        android:textSize="18sp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/grad_background"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/imageButton"
        android:layout_alignStart="@+id/imageButton"
        android:layout_marginTop="37dp"
        android:id="@+id/imageButton3"
        android:scaleType="fitCenter"
        android:background="@drawable/roundedbuttonselected"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/grad_background"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp"
        android:id="@+id/imageButton5"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="90dp"
        app:srcCompat="@drawable/grad_background"
        android:id="@+id/imageButton4"
        android:layout_alignTop="@+id/imageButton3"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignStart="@+id/imageButton2"/>
</RelativeLayout>
